<!DOCTYPE html>
<html lang="en">
<head>
    <script type="module" src="../js/index.js"></script>
    <%- include('partials/head.ejs') %>

    <title>Trang chủ</title>
</head>

<body>

    <header>
        <%- include('../partials/header.ejs') %>
    </header>

    <main>
         <!-- Sidebar menu-->
         <div class="slide" style="z-index: 0;">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                
                </ol>
            
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
            
                <div class="item active">
                    <img src="img/slide1.png" alt="slide1" style="width:1890px; height:420px;">
                </div>
            
                <div class="item">
                    <img src="img/slide2.png" alt="slide2" style="width:1890px; height:420px;">
                </div>
                
                <div class="item">
                    <img src="img/slide3.png" alt="slide3" style="width:1890px; height:420px;">
            
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        </div>
        <div class="content-product">
            <div class="products-bestseller">
                <h5><a href="/">Xem tất cả <i class="fa-solid fa-angle-right"></i></a></h5>
                <div style="clear: both;"></div>
                <div class="banner-seller">
                    <div class="seller1" style="margin-bottom: 50px"><img src="/img/seller1.png" ></div>
                    <div class="seller2"><img src="/img/seller2.png" ></div>
                    
                </div>
                <div class="products">
                    <% for(var i=0; i < sellerbooks.length; i++) { %>
                    <!-- price discount -->
                        <% var price_discount1 = sellerbooks[i].price - ((sellerbooks[i].price/ 100) * sellerbooks[i].discount); %> 
                        <%function formatCash(cash) {
                            return cash.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                        } 
                        %>
                    <!-- price discount -->
                    <div class="product">
                        <a href="/details/<%= sellerbooks[i]._id%>">
                            <div class="product-selloff"> <%= sellerbooks[i].discount%>%</div>
                            <div class="img-product">
                                <img src="/uploads/<%= sellerbooks[i].image.data %>">
                            </div>
                            <div class="product-name"> <%= sellerbooks[i].name%> </div>
                            <div class="product-price">
                                <div class="product-price-selloff"> <%=formatCash(price_discount1)%><u>đ</u></div>
                                <div class="product-price-cost"> <s><%=formatCash(sellerbooks[i].price)%><u>đ</u></s></div>
                            </div>
                        </a>
                    </div>
                    <% } %>
                </div>
                <div style="clear: both;"></div>
            </div>
            <div class="products-new">
                
                <div style="margin-top:35px; margin-bottom:35px" class="banner-products-new">
                    <img style="width: 100%; height:250px" src="/img/newbook1.png"/>
                </div>
                <h5><a href="/">Xem tất cả <i class="fa-solid fa-angle-right"></i></a></h5>
                <div class="banner-seller">
                    <div class="seller1" style="margin-bottom: 50px"><img src="/img/bannernewbook1.png" ></div>
                    <div class="seller2"><img src="/img/bannernewbook2.png" ></div>
                    
                </div>
                <div class="products">
                    <% for(var i=0; i < newbooks.length; i++) { %>
                        <!-- price discount -->
                        <% var pricediscount= newbooks[i].price - ((newbooks[i].price/ 100) * newbooks[i].discount); %> 
                        <!-- price discount -->
                        <div class="product">
                            <a href="/details/<%= newbooks[i]._id%>">
                                <div class="product-selloff"> <%= newbooks[i].discount%>%</div>
                                <div class="img-product">
                                    <img src="/uploads/<%= newbooks[i].image.data %>">
                                </div>
                                <div class="product-name"> <%= newbooks[i].name%> </div>
                                <div class="product-price">
                                    <div class="product-price-selloff"> <%=formatCash(pricediscount)%><u>đ</u></div>
                                    <div class="product-price-cost"> <s><%= formatCash(newbooks[i].price) %><u>đ</u></s></div>
                                </div>
                            </a>
                        </div>
                     <% } %>
                </div>
            </div>
            <div class="products-types">
                <div class="products-types-title">
                    <h4>CÁC DÒNG SẢN PHẨM</h4>
                    <h5>Tìm cuốn sách theo chủ đề mà bạn quan tâm.</h5>
                </div>
                <div class="container-types-products">
                    <div class="types">
                        <a href="/">
                            <div class="title-type">
                                <h4>Sách văn học</h4>
                                <p>Tìm cuốn sách của bạn</p>
                            </div>
                            <img src="/img/vanhoc.png"/>
                        </a>
                    </div>
                    <div class="types">
                        <a href="/">
                            <div class="title-type">
                                <h4>Sách thiếu nhi</h4>
                                <p>Tìm cuốn sách của bạn</p>
                            </div>
                            <img src="/img/thieunhi.png"/>
                        </a>
                    </div>
                    <div class="types">
                        <a href="/">
                            <div class="title-type">
                                <h4>Sách ngoại Văn</h4>
                                <p>Tìm cuốn sách của bạn</p>
                            </div>
                            <img src="/img/ngoaivan.png"/>
                        </a>
                    </div>
                    <div class="types">
                        <a href="/">
                            <div class="title-type">
                                <h4>Sách kinh doanh</h4>
                                <p>Tìm cuốn sách của bạn</p>
                            </div>
                            <img src="/img/kinhdoanh.png"/>
                        </a>
                    </div>
                    <div class="types">
                        <a href="/">
                            <div class="title-type">
                                <h4>Truyện trinh thám</h4>
                                <p>Tìm cuốn sách của bạn</p>
                            </div>
                            <img src="/img/trinhtham.png"/>
                        </a>
                    </div>
                    <div class="types">
                        <a href="/">
                            <div class="title-type">
                                <h4>Văn phòng phẩm</h4>
                                <p>Tìm cuốn sách của bạn</p>
                            </div>
                            <img src="/img/vanphongpham.png"/>
                        </a>
                    </div>

                </div>
            </div>
            <div class="products-stationery">
                <h4>SÁCH GIẢM GIÁ NHIỀU NHẤT</h4>
                <div class="products"  style="width: 100%">
                    <% for(var i=0; i < books.length; i++) { %>
                        <!-- price discount -->
                            <% var price_discount3 = books[i].price - ((books[i].price/ 100) * books[i].discount); %> 
                                     <!-- price discount -->
                        <div class="product" style="width: 18.75%;">
                            <a href="/details/<%= books[i]._id%>">
                                <div class="product-selloff"> <%= books[i].discount%>%</div>
                                <div class="img-product">
                                    <img src="/uploads/<%= books[i].image.data %>">
                                </div>
                                <div class="product-name"> <%= books[i].name%> </div>
                                <div class="product-price">
                                    <div class="product-price-selloff"> <%=formatCash(price_discount3)%><u>đ</u></div>
                                    <div class="product-price-cost"> <s><%= formatCash(books[i].price) %><u>đ</u></s></div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </main>
       
    <footer>
        <%- include('../partials/footer.ejs') %>
        
    </footer>

</body>
</html>
