<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/css/collections.css" >
    <link rel="stylesheet" href="/css/register.css">
    <title>Đăng nhập</title>
</head>
<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <main>
        <div class="content">
            <div class="title-register">
                <h6>TRANG CHỦ / ĐĂNG NHẬP</h6>
            </div> 
            <div class="main-register">
                <h4>ĐĂNG NHẬP</h4>

                <form method="post" action="/account/login" id="frm_register">
                    <input type="text" name="username" id="txtUsername" placeholder="Tên đăng nhập" />
                    <input type="password" name="password" id="txtNewPassword" placeholder="Mật khẩu" />
                    <% if(error){ %>
                        <div class="err">
                            <%= error %> 
                        </div>
                        <% } %> 
                        <p style="padding: 5px">Bạn chưa có tài khoản ? <a href="/account/register">Đăng ký</a></p>
                    <button type="submit" name="btnRegister" id="submit">Đăng nhập</button>
                    <button type="button" name="btnCancel" onclick="history.back()">Trở về</button>
                </form>
            </div>
        </div>
    </main>
       
    <footer>
        <%- include('partials/footer.ejs') %>   
    </footer>

</body>
</html>
